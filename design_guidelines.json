{
  "design_system": {
    "identity": {
      "name": "Prem Rishi Fitness",
      "archetype": "The Performance Pro",
      "vibe": "Tactical Minimalism, High-Energy, Professional",
      "principles": [
        "Fusion over Imitation: Mix Gym Grit with Digital Precision",
        "Emotion First: Every pixel must scream 'Action'",
        "Content is King: Direct, bold copy. No fluff.",
        "Zoom In: Focus on the sweat, the metal, the food.",
        "Negative Space: Let the intensity breathe."
      ]
    },
    "typography": {
      "font_family": {
        "headings": "Barlow Condensed, sans-serif",
        "body": "Manrope, sans-serif"
      },
      "weights": {
        "headings": "800",
        "body": "400, 500"
      },
      "scale": {
        "h1": "text-6xl md:text-8xl tracking-tighter uppercase",
        "h2": "text-4xl md:text-6xl tracking-tight uppercase",
        "h3": "text-2xl md:text-3xl font-bold uppercase",
        "body": "text-base md:text-lg leading-relaxed tracking-wide"
      },
      "imports": [
        "@import url('https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@700;800;900&family=Manrope:wght@400;500;700&display=swap');"
      ]
    },
    "colors": {
      "palette": {
        "background": "#09090B",
        "foreground": "#FAFAFA",
        "primary": "#DC2626",
        "primary_foreground": "#FFFFFF",
        "secondary": "#27272A",
        "secondary_foreground": "#A1A1AA",
        "accent": "#DC2626",
        "muted": "#18181B",
        "border": "#27272A"
      },
      "gradients": {
        "hero_overlay": "linear-gradient(to top, #09090B 10%, transparent 100%)",
        "card_hover": "linear-gradient(45deg, rgba(220, 38, 38, 0.1), transparent)"
      },
      "utility": {
        "glass": "bg-zinc-950/70 backdrop-blur-xl border border-white/10",
        "neon_glow": "shadow-[0_0_20px_rgba(220,38,38,0.5)]"
      }
    },
    "layout": {
      "spacing": {
        "container_padding": "px-6 md:px-12 lg:px-24",
        "section_gap": "py-24 md:py-32",
        "element_gap": "gap-6 md:gap-12"
      },
      "grid_system": {
        "services": "grid grid-cols-1 md:grid-cols-12 gap-6 auto-rows-[minmax(300px,auto)]"
      },
      "border_radius": {
        "default": "rounded-none",
        "buttons": "rounded-full",
        "cards": "rounded-xl"
      }
    },
    "components": {
      "buttons": {
        "primary": "bg-primary text-white hover:bg-red-700 transition-all duration-300 uppercase tracking-widest font-bold px-8 py-6 rounded-full shadow-[0_0_15px_rgba(220,38,38,0.4)] hover:shadow-[0_0_30px_rgba(220,38,38,0.6)] hover:scale-105",
        "secondary": "bg-transparent border border-white/20 text-white hover:bg-white/10 transition-all duration-300 uppercase tracking-widest font-bold px-8 py-6 rounded-full"
      },
      "cards": {
        "service_card": "group relative overflow-hidden bg-zinc-900/50 border border-white/5 hover:border-primary/50 transition-all duration-500 rounded-xl p-8 flex flex-col justify-end h-full"
      },
      "inputs": {
        "style": "bg-zinc-900/50 border-white/10 focus:border-primary focus:ring-primary/20 text-white placeholder:text-zinc-500 h-14 rounded-lg"
      }
    },
    "motion": {
      "library": "framer-motion",
      "animations": {
        "fade_up": {
          "initial": { "opacity": 0, "y": 40 },
          "whileInView": { "opacity": 1, "y": 0 },
          "viewport": { "once": true },
          "transition": { "duration": 0.8, "ease": "easeOut" }
        },
        "stagger_children": {
          "container": {
            "hidden": { "opacity": 0 },
            "show": {
              "opacity": 1,
              "transition": { "staggerChildren": 0.1 }
            }
          },
          "item": {
            "hidden": { "opacity": 0, "y": 20 },
            "show": { "opacity": 1, "y": 0 }
          }
        }
      }
    },
    "assets": {
      "images": {
        "hero_bg": "https://images.unsplash.com/photo-1740895307943-7878df384db1?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NDk1Nzl8MHwxfHNlYXJjaHwxfHxneW0lMjB3b3Jrb3V0JTIwZGFyayUyMG1vb2R5JTIwbGlnaHRpbmd8ZW58MHx8fHwxNzY4Njk1NTcyfDA&ixlib=rb-4.1.0&q=85",
        "trainer_portrait": "https://images.unsplash.com/photo-1655556870982-0cd4d5854e05?crop=entropy&cs=srgb&fm=jpg&ixid=M3w4NTYxOTB8MHwxfHNlYXJjaHwxfHxmaXRuZXNzJTIwdHJhaW5lciUyMHBvcnRyYWl0JTIwbWFuJTIwY29uZmlkZW50fGVufDB8fHx8MTc2ODY5NTU4MHww&ixlib=rb-4.1.0&q=85",
        "service_weight_loss": "https://images.unsplash.com/photo-1693214674451-2111f7690877?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NDk1Nzl8MHwxfHNlYXJjaHwyfHxneW0lMjB3b3Jrb3V0JTIwZGFyayUyMG1vb2R5JTIwbGlnaHRpbmd8ZW58MHx8fHwxNzY4Njk1NTcyfDA&ixlib=rb-4.1.0&q=85",
        "service_strength": "https://images.unsplash.com/photo-1700784795176-7ff886439d79?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NDk1Nzl8MHwxfHNlYXJjaHw0fHxneW0lMjB3b3Jrb3V0JTIwZGFyayUyMG1vb2R5JTIwbGlnaHRpbmd8ZW58MHx8fHwxNzY4Njk1NTcyfDA&ixlib=rb-4.1.0&q=85",
        "service_nutrition": "https://images.unsplash.com/photo-1669490884223-ca6ca27c8766?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NDk1NzZ8MHwxfHNlYXJjaHwxfHxoZWFsdGh5JTIwZm9vZCUyMG1lYWwlMjBwcmVwJTIwZGFyayUyMGJhY2tncm91bmR8ZW58MHx8fHwxNzY4Njk1NTc1fDA&ixlib=rb-4.1.0&q=85",
        "service_flexibility": "https://images.unsplash.com/photo-1758599880425-7862af0a4b50?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NDQ2NDF8MHwxfHNlYXJjaHwxfHxtYW4lMjBzdHJldGNoaW5nJTIweW9nYSUyMGd5bXxlbnwwfHx8fDE3Njg2OTU1Nzh8MA&ixlib=rb-4.1.0&q=85"
      },
      "icons": "lucide-react"
    }
  },
  "implementation_plan": {
    "steps": [
      "1. Setup Fonts: Add Google Fonts import to index.css",
      "2. Configure Tailwind: Update tailwind.config.js with new colors and font families",
      "3. Global Styles: Apply dark background and text color in index.css",
      "4. Component Cleanup: Remove default App.css styles",
      "5. Build Hero Section: Full height, background image, gradient overlay, large typography",
      "6. Build Services Section: Bento grid layout with hover effects",
      "7. Build About Section: Split layout (Image + Text)",
      "8. Build Contact Section: Glassmorphism card with Shadcn form",
      "9. Add Motion: Integrate Framer Motion for scroll reveals"
    ],
    "files_to_modify": [
      "/app/frontend/src/index.css",
      "/app/frontend/tailwind.config.js",
      "/app/frontend/src/App.js",
      "/app/frontend/src/components/Hero.jsx",
      "/app/frontend/src/components/Services.jsx",
      "/app/frontend/src/components/About.jsx",
      "/app/frontend/src/components/Contact.jsx"
    ]
  },
  "universal_guidelines": {
    "do_not": [
      "Use gradients for text unless absolutely necessary",
      "Use default blue/purple colors",
      "Center align long text blocks",
      "Use 'Inter' for headings"
    ],
    "must_do": [
      "Use 'data-testid' on all interactive elements",
      "Ensure 4.5:1 contrast ratio for text",
      "Use 'sonner' for toast notifications",
      "Make all images responsive with object-cover"
    ]
  }
}